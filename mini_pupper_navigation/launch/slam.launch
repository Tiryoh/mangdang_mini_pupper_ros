<?xml version="1.0"?>
<launch>
    <arg name="robot_name" default="/"/>
    <arg name="rviz" default="false"/>
    <param name="/use_sim_time" value="false" />
    <arg name="method" default="cartographer"/>

    <arg if="$(eval arg('robot_name') == '/')"  name="frame_prefix" value="" />
    <arg unless="$(eval arg('robot_name') == '/')" name="frame_prefix" value="$(arg robot_name)/" />

    <group ns="$(arg robot_name)">
        <group if="$(eval arg('method') == 'cartographer')">
            <node name="cartographer_node" pkg="cartographer_ros"
                type="cartographer_node" args="
                    -configuration_directory $(find mini_pupper_navigation)/config/cartographer
                    -configuration_basename slam.lua"
                output="screen">
            </node>

            <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
                type="cartographer_occupancy_grid_node" args="-resolution 0.05" />
        </group>

        <group if="$(eval arg('method') == 'gmapping')">
            <include file="$(find mini_pupper_navigation)/launch/include/gmapping.launch.xml">
                <arg name="frame_prefix" value="$(arg frame_prefix)"/>
            </include>
        </group>

        <node name="rviz" pkg="rviz" type="rviz" required="true"
            args="-d $(find mini_pupper_navigation)/rviz/slam_$(arg method).rviz -f $(arg frame_prefix)map" />
    </group>
</launch>
